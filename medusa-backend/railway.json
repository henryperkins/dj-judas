{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "medusa-backend",
      "source": {
        "repo": "."
      },
      "variables": {
        "PORT": "9000",
        "NODE_ENV": "production",
        "STORE_CORS": "https://djjudas.netlify.app,http://localhost:5173",
        "ADMIN_CORS": "https://djjudas.netlify.app,http://localhost:5173",
        "AUTH_CORS": "https://djjudas.netlify.app,http://localhost:5173"
      }
    }
  ]
}